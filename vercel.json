{
  "version": 2,
  "buildCommand": "cd server && npm install && npm run build && cd .. && npm install && npm run build",
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "server/dist/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/dist/**"]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/dist/index.js"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
